{% endmacro %}

{% macro drop(field) %}
	<select name="membership[{{ field.name }}]">
		{% for option in field.options %}
			<option
				value="{{ option.id }}"
				data-validation-rules="{{ field['validation-rules']|json_encode }}"
				{% if option.id in field.data %}
					selected="true"
				{% endif %}
			>{{ option.name }}</option>
		{% endfor %}
	</select>
{% endmacro %}

