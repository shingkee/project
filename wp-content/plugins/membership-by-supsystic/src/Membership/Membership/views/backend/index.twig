					{{ options.radioRow(
					translate('Badges'),
					[{
						'label': translate('Yes'),
						'name': 'main[badges]',
						'value': 'true',
						'checked': settings.main.badges == 'true'
					},
					{
						'label': translate('No'),
						'name': 'main[badges]',
						'value': 'false',
						'checked': settings.main.badges == 'false'
					}],
					'badges',
					null, null, {'mbsThinCol': 1}
