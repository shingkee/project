{% macro radio(field) %}
	<div class="mp-field">
		<label>{{ field.label }}</label>
		<div class="membership-radio-input">
			{% for option in field.options %}
				<input
					type="radio"
					name="{{ field.name }}[]"
					id="{{ field.name }}-{{ loop.index }}"
					value="{{ option.id }}"
					{% if option.checked %}
						checked="true"
					{% endif %}
				>
				<label for="{{ field.name }}-{{ loop.index }}">{{ option.name }}</label>
			{% endfor %}
		</div>
	</div>
{% endmacro %}

