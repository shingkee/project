		<div class="membership-scroll-input">
			<select name="{{ field.name }}[]" multiple="true" style="width: 140px">
				{% for option in field.options %}
					<option
						value="{{ option.id }}"
						{% if option.checked %}
							selected="true"
						{% endif %}
					>{{ option.name }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
{% endmacro %}