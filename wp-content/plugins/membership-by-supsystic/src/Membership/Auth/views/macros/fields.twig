{% macro drop(field) %}
	<div class="mp-field">
		<label>{{ field.label }}</label>
		<div class="membership-dropdown-input">
			<select name="{{ field.name }}">
				{% for option in field.options %}
					<option
						value="{{ option.id }}"
						{% if option.checked %}
							selected="true"
						{% endif %}
					>{{ option.name }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
{% endmacro %}

