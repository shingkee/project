{% macro createField(field) %}
	{% import _self as fields %}
	{% if field.enabled and field.registration %}
		{{ attribute(fields, field.type, [field]) }}
	{% endif %}
{% endmacro %}

{% macro section(field) %}
	<h2>{{ field.label }}</h2>
{% endmacro %}

{% macro text(field) %}
	<div class="mp-field">
		<div class="mp-field-label">
			<label>{{ field.label }}</label>
		</div>
		<div class="mp-field-input">
			<input 
				type="text" 
				name="{{ field.name }}"
			>
		</div>
	</div>
{% endmacro %}

